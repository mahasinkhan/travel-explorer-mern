<body>
    <% layout("/layouts/boilerplate") %>
    <div class="row mt-3">
        <div class="col-8 offset-2">
            <h3>Edit Your Listing</h3>
            <form method="POST" action="/listings/<%= listing._id %>?_method=PUT" novalidate class="needs-validation">
                <div class="form-group mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input value="<%= listing.title %>" class="form-control" type="text" name="listing[title]" id="" required>
                    <div class="valid-feedback">Title looks good!</div>
                </div>
                <div class="form-group mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea name="listing[description]" class="form-control" id="" cols="2" rows="2" required><%= listing.description %></textarea>
                    <div class="invalid-feedback">Please enter a short description.</div>
                </div>
                <div class="form-group mb-3">
                    <label for="image" class="form-label">Image Link</label>
                    <input value="<%= listing.image %>" class="form-control" type="text" name="listing[image]" id="" required>
                    <div class="invalid-feedback">Please enter a valid image URL/link.</div>
                </div>
                <div class="row">
                    <div class="form-group mb-3 col-md-4">
                        <label for="price" class="form-label">Price</label>
                        <input value="<%= listing.price %>" type="number" class="form-control" name="listing[price]" id="" required>
                        <div class="invalid-feedback">Please enter a valid price.</div>
                    </div>
                    <div class="form-group mb-3 col-md-8">
                        <label for="country" class="form-label">Country</label>
                        <input value="<%= listing.country %>" type="text" class="form-control" name="listing[country]" id="" required>
                        <div class="invalid-feedback">Please enter a valid country name.</div>
                    </div>
                </div>
                <div class="form-group mb-3">
                    <label for="location" class="form-label">Location</label>
                    <input value="<%= listing.location %>" type="text" class="form-control" name="listing[location]" id="" required>
                    <div class="invalid-feedback">Please enter a valid location.</div>
                </div>
                
                <button class="btn btn-dark edit-btn mt-3">Edit</button>
            </form>
        </div>
    </div>
    <script src="/js/script.js"></script>
</body>
